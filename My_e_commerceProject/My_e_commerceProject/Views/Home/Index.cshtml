    <section class="items-product1 pt-30">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="section-tittle text-center mb-40">
                        <h2>Our Categories</h2>
                    </div>
                </div>
                @foreach (var item in Model)
                {
                    <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6">
                        <div class="single-items mb-20">
                            <div class="items-img">
                                <img src="~/Images/@item.image_url" alt="@item.name">
                            </div>
                            <div class="items-details">
                                <h4>
                                    <a href="@Url.Action("ShopByCategory", "Home", new { categoryId = item.id })">
                                        @Html.DisplayFor(modelItem => item.name)<br /> Collection
                                    </a>
                                </h4>
                                <a href="@Url.Action("ShopByCategory", "Home", new { categoryId = item.id })" class="browse-btn">Shop Now</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>



