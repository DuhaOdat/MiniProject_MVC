@model My_e_commerceProject.Models.user
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="hero-area section-bg2">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="slider-area">
                    <div class="slider-height2 slider-bg4 d-flex align-items-center justify-content-center">
                        <div class="hero-caption hero-caption2 text-center">
                            <h2>Profile</h2>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container mt-5">



    <!-- Profile Details -->
    <div class="row justify-content-center mt-4">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                
                <div class="card-body p-4">
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>@Html.DisplayNameFor(model => model.name):</strong>
                        </div>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.name)</p>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4">
                            <strong>@Html.DisplayNameFor(model => model.email):</strong>
                        </div>
                        <div class="col-sm-8">
                            <p class="form-control-plaintext">@Html.DisplayFor(model => model.email)</p>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    @Html.ActionLink("Edit Profile", "Edit", new { id = Model.id }, new { @class = "btn btn-warning btn-lg" })
                    @Html.ActionLink("Back to Home", "Index", null, new { @class = "btn btn-secondary btn-lg ml-2" })
                </div>
            </div>
        </div>
    </div>
</div>
