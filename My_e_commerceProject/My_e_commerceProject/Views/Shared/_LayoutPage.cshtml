<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    @Styles.Render("~/bundles/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="header-area">
            <div class="header-mid header-sticky">
                <div class="container">
                    <div class="menu-wrapper">
                        <div class="logo">
                            <a href="#">
                                <img src="~/assests/img/logo/Liceria & Co (3).png" width="80" alt="Logo">
                            </a>
                        </div>

                        <div class="main-menu d-none d-lg-block">
                            <nav>
                                <ul id="navigation">
                                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                                    <li class="new">@Html.ActionLink("Shop", "shop", "Home", new { area = "" }, new { @class = "nav-link" })</liclass="new">
                                    
                                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>

                                    <li>
                                        <div class="nav-search search-switch hearer_icon">
                                            <a id="search_1" href="javascript:void(0)">
                                                <span class="flaticon-search"></span>
                                            </a>
                                        </div>
                                    </li>
                                    <li>
                                        <a href="login.html"><span class="flaticon-user"></span></a>
                                        @{ if (Session["UserID"] != null)
                                            {
                                                <ul class="submenu">
                                                    <li>@Html.ActionLink("Profile", "Details", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                                                    <li>@Html.ActionLink("Logout", "Logout", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                                                </ul>
                                            }
                                            else
                                            {
                                                <ul class="submenu">
                                                    <li>@Html.ActionLink("Login", "Login", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                                                    <li>@Html.ActionLink("Register", "Register", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                                                </ul>
                                            }
                                        }
                                    </li>
                                    <li class="cart"><a href="@Url.Action("cart", "Home")"><span class="flaticon-shopping-cart"></span></a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>

                    <div class="search_input" id="search_input_box">
                        <form class="search-inner d-flex justify-content-between">
                            <input type="text" class="form-control" id="search_input" placeholder="Search Here">
                            <button type="submit" class="btn"></button>
                            <span class="ti-close" id="close_search" title="Close Search"></span>
                        </form>
                    </div>

                    <div class="col-12">
                        <div class="mobile_menu d-block d-lg-none"></div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div>
        @RenderBody()
    </div>

    <footer>
        <div class="footer-wrapper gray-bg">
            <div class="footer-area footer-padding">
                <section class="subscribe-area">
                    <div class="container">
                        <div class="row justify-content-between subscribe-padding">
                            <div class="col-xxl-3 col-xl-3 col-lg-4">
                                <div class="subscribe-caption">
                                    <h3>Subscribe Newsletter</h3>
                                    <p>Subscribe newsletter to get 5% on all products.</p>
                                </div>
                            </div>
                            <div class="col-xxl-5 col-xl-6 col-lg-7 col-md-9">
                                <div class="subscribe-caption">
                                    <form action="#">
                                        <input type="text" placeholder="Enter your email">
                                        <button class="subscribe-btn">Subscribe</button>
                                    </form>
                                </div>
                            </div>
                            <div class="col-xxl-2 col-xl-2 col-lg-4">

                                <div class="footer-social">
                                    <a href="https://bit.ly/sai4ull"><i class="fab fa-facebook"></i></a>
                                    <a href="#"><i class="fab fa-instagram"></i></a>
                                    <a href="#"><i class="fab fa-youtube"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <div class="container">

                    <div class="row justify-content-center mb-3">
                        <div class="col-xl-3 col-lg-3 col-md-6 col-sm-8 text-center">
                            <div class="single-footer-caption">
                                <div class="footer-logo mb-20">
                                    <a href="#"><img src="~/assests/img/logo/Liceria & Co (3).png" width="150" alt="Logo"></a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row justify-content-center mb-3">
                        <div class="col-auto text-center">

                            <a href="#">Home |</a>
                            <a href="#">Shop |</a>
                            <a href="#">Contact Us</a>

                        </div>
                    </div>

                    <div class="row justify-content-center">
                        <div class="col-xl-12 text-center">
                            <div class="footer-copy-right">
                                <p style="color: #fff;">
                                    Copyright &copy;
                                    <script>document.write(new Date().getFullYear());</script> All rights reserved | This template is made with <i class="fa fa-heart color-danger" style="color: #fff; " aria-hidden="true"></i> by <a href="#" target="_blank" rel="nofollow noopener">DuhaOdt</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>


    <div id="back-top">
        <a class="wrapper" title="Go to Top" href="#">
            <div class="arrows-container">
                <div class="arrow arrow-one"></div>
                <div class="arrow arrow-two"></div>
            </div>
        </a>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/customjs")
    @RenderSection("scripts", required: false)
</body>
</html>
